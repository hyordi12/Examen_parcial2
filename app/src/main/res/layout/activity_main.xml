<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/pizza2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yordi"
            android:textColor="#FFFFFFFF"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/Pizzas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizzas" />

    <ImageView
        android:id="@+id/imageViewPizzas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pizzas" />

    <Button
        android:id="@+id/Refrescos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refrescos" />

    <ImageView
        android:id="@+id/imageViewRefrescos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refres" />

</LinearLayout>
